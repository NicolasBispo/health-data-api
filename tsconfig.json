{
   "compilerOptions": {
     "target": "ES2024",
     "module": "CommonJS",
     "lib": ["ESNext", "ES2021", "ES2024"],
     "moduleResolution": "node",
     "outDir": "./build",
     "rootDir": "./src",
     "sourceMap": true,
 
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
 
     "baseUrl": "./",
     "paths": {
       "@/*": ["src/*"],
       "@modules/*": ["src/modules/*"]
     },
 
     "types": ["node"] // ðŸ‘ˆ garante os tipos globais de node, Ãºtil pro Fastify tambÃ©m
   },
   "include": ["src"], // ðŸ‘ˆ isso Ã© importante pra considerar os arquivos de cÃ³digo
   "exclude": ["node_modules", "build"]
 }
 